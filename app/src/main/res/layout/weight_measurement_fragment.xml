<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
        tools:context=".ui.weight.WeightMeasurementFragment"
        >


        <TextView
                android:id="@+id/diet_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_new_measurement"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.022" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="Weight:"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diet_textView" />


    <EditText
            android:id="@+id/weight_input"
            android:layout_width="93dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:background="@color/colorAccent"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/diet_textView" />

    <Button
            android:id="@+id/weight_button"
            android:layout_width="358dp"
            android:layout_height="45dp"
            android:layout_marginTop="52dp"
            android:background="@color/colorAccent"
            android:text="Add Measurement"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weight_input" />


</androidx.constraintlayout.widget.ConstraintLayout>