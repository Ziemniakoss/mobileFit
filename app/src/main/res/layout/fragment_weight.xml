<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.weight.WeightFragment" android:background="@color/background">
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent" android:background="@color/background">
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:orientation="vertical">
			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:layout_margin="8sp"
					android:background="@color/colorAccent" android:id="@+id/aa">

				<TextView
						android:text="200kg"
						android:layout_width="0dp"
						android:layout_height="wrap_content" android:id="@+id/tv_lastWeight"
						app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
						android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
						android:textAlignment="center" android:textColor="@color/textColor" android:textSize="30sp"/>
				<Button
						android:text="@string/weight_new_measurement"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="24dp"
						app:layout_constraintTop_toBottomOf="@+id/tv_lastWeight"
						app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
						app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
						android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
						android:background="@color/colorPrimary" android:textColor="@color/textColor"
						android:id="@+id/btn_newMeasurement"/>
			</androidx.constraintlayout.widget.ConstraintLayout>
			<HorizontalScrollView
					android:layout_width="400sp" android:layout_height="wrap_content"
					android:layout_margin="8sp" android:padding="8sp" android:background="@color/colorAccent">
				<view
						android:layout_width="wrap_content"
						android:layout_height="300dp" android:id="@+id/v_liearChart"
						class="im.dacer.androidcharts.LineView" android:minHeight="200sp" android:minWidth="200sp"/>
			</HorizontalScrollView>
		</LinearLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>